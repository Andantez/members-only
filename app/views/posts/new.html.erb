<h1>Create a Post</h1>
<% if @post.errors.full_messages.any? %>
<ul>
  <% @post.errors.full_messages.each do |msg| %>
  <li>  <%= msg %></li>
  <% end %>
</ul>
<% end %>
<div class="row log-in">
  <div class="col-md-6 col-md-offset-3">
<%= form_for(@post) do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control"%>
  </p>
  <p>
    <%= f.label :body, value: "Content" %>
    <%= f.text_area :body, size: "30x5", class: "form-control" %>
  </p>
 <p> <%= f.submit "Create", class: "submit-btn" %></p>
<% end %>
 </div>
</div>